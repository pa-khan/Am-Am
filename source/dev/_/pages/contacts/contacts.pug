extends ../../templates/default
block vars
	-
		title = "Контакты"

block content

	.page

		+style('contacts', 'blocks')
		.contacts
			.case
				.contacts__main
					.contacts__info.an.fadeIn-scale
						.contacts__info-item
							.contacts__info-title.h3 #[h3 Звоните]
							.contacts__info-text
								a(href="tel:74832416261") #[strong +7 (4832) 41-62-61] (приемная)
								a(href="tel:74832417011") #[strong +7 (4832) 41-70-11] (факс)
						.contacts__info-item
							.contacts__info-title.h3 #[h3 Пишите]
							.contacts__info-text
								a(href="mailto:lab@bgmz.ru") #[strong lab@bgmz.ru] (отдел качества)
								a(href="mailto:main@bgmz.ru") #[strong main@bgmz.ru] (по общим вопросам)
						.contacts__info-item
							.contacts__info-title.h3 #[h3 Приезжайте]
							.contacts__info-text
								p #[strong 241019, Россия, г. Брянск, #[br]ул. 2-я Почепская, 35а]
					.contacts__map.map
						.map__area#map(data-map="53.246175, 34.330493" data-placeholder="53.246175, 34.330493")
						script(src="https://api-maps.yandex.ru/2.1/?lang=ru_RU")
				.contacts__desc.row.an.fadeIn-up
					.contacts__desc-col
						.contacts__desc-title.h3 #[h3 Режим работы]
						.contacts__desc-text
							p #[strong С 9:00 до 18:00] (в будни)
							p #[strong.inline Сб-Вс] выходной #[i (отдел сбыта — без выходных)]
					.contacts__desc-col
						.contacts__desc-title.h3 #[h3 Сотрудничество]
						.contacts__desc-text
							a(href="tel:74832417064") #[strong +7 (4832) 41-70-64] (в будни с 9:00 до 18:00)
							a(href="mailto:main@bgmz.ru") #[strong main@bgmz.ru]
				.contacts__form.form.an.fadeIn-scale
					.form__wrap
						.form__title.h2 #[h2 Задать вопрос]
						form.form__form
							.form__input.input.--gray.--required.--tel
								.input__wrap
									input.input__area(type="tel" name="tel" placeholder="Номер телефона")
							.form__textarea.textarea.--gray.--required
								.textarea__wrap
									textarea.textarea__area(name="comment" placeholder="Ваш вопрос")
							.form__check.check.--check.--required
								input.check__input(type="checkbox" name="policy-check")
								.check__wrap
									.check__point
									.check__text Я согласен с #[a(href="" target="_blank") политикой конфиденциальности]
							button.form__btn.btn.--green.--md Отправить
							